{
  "name": "@alloylab/collection-registry",
  "version": "1.0.0",
  "description": "Automated code generation from Payload CMS collections",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "collectionRegistry": "./dist/bin.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "commitlint": "commitlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test:run && npm run lint && npm run typecheck",
    "prepare": "lefthook install && npm run build",
    "publish": "npm publish --access public",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "payload",
    "cms",
    "code-generation",
    "typescript",
    "react",
    "api-client",
    "collections"
  ],
  "author": "Stephen Way <stephen@stephenway.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alloy-lab/collection-registry.git"
  },
  "bugs": {
    "url": "https://github.com/alloy-lab/collection-registry/issues"
  },
  "homepage": "https://github.com/alloy-lab/collection-registry#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.16.0",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.16.0",
    "lefthook": "^1.13.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "payload": "^3.0.0"
  }
}
